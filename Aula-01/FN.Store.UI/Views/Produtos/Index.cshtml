<h2>Listagem de Produtos</h2>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Tipo</th>
            <th>Qtde</th>
            <th>Data do Cadastro</th>
        </tr>
    </thead>

    <tbody>
        <!-- Esse Model é a referencia do objeto produto que foi passado no controller na action index -->
        @foreach (var produto in Model)
        {
        <tr>
            <td>@produto.Nome</td>
            <td>@produto.Preco</td>
            <td>@produto.Tipo</td>
            <td>@produto.Qtde</td>
            <td>@produto.DataCadastro</td>
        </tr>
        }


    </tbody>
</table>